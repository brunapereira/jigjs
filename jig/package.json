  },
  "types": "./main.d.ts",
  "license": "MIT",
  "dependencies": {
    "@abraham/reflection": "^0.7.0",
    "chalk": "^4.0.0",
    "cross-fetch": "^3.0.4",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "jsdom": "^16.2.2",
    "morphdom": "^2.6.1",
    "mutationobserver-shim": "^0.3.5",
