    "jest-fetch-mock": "^3.0.3",
    "supertest": "^4.0.2",
    "wait-for-expect": "^3.0.2",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.7.0",
    "webpack-cli": "^3.3.11",
    "yarn": "^1.22.4"
