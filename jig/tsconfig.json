{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowJs": true,
    "lib": [
      "dom",
      "es6",
      "es2019"
    ],
    "types": ["reflect-metadata"],
    "target": "es2015"
  },
  "include": [
    "./src/*",
    "./node_modules/**/*.d.ts"
  ]
}
